<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/intervention_imageViewPhoto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/userprofile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/intervention_textViewFullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="18dp"
                android:text="Teacher : Karim KARIMI"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:id="@+id/intervention_editTextIntervention"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="3"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/intervention_textViewIntervention"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />

            <TextView
                android:id="@+id/intervention_textViewTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="4dp"
                android:paddingBottom="8dp"
                android:text="12/12/20 22h 35"
                android:textAlignment="textEnd" />
        </LinearLayout>
</LinearLayout>