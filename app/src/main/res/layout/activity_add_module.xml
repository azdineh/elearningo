<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddModuleActivity">

    <EditText
        android:id="@+id/eTModuleName"
        android:layout_width="336dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:hint="Module name here"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Save"
        android:onClick="addModule"
        app:layout_constraintEnd_toEndOf="@+id/eTModuleName"
        app:layout_constraintTop_toBottomOf="@+id/eTModuleName" />
</androidx.constraintlayout.widget.ConstraintLayout>