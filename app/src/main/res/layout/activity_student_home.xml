<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    tools:context=".StudentHomeActivity">


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="logout"
        android:padding="8dp"
        android:text="Log out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="92dp"
            android:layout_height="90dp"
            android:src="@mipmap/userprofile"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="44dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="20dp">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="221dp"
                android:layout_height="22dp"
                android:text="Hi student"
                android:textSize="16dp"
                tools:layout_editor_absoluteX="116dp"
                tools:layout_editor_absoluteY="44dp" />

            <TextView
                android:id="@+id/textViewFullName2"
                android:layout_width="221dp"
                android:layout_height="22dp"
                android:text="TextView"
                android:textSize="16dp"
                tools:layout_editor_absoluteX="116dp"
                tools:layout_editor_absoluteY="66dp"
                tools:text="@tools:sample/full_names" />

            <TextView
                android:id="@+id/textViewEmail2"
                android:layout_width="220dp"
                android:layout_height="22dp"

                android:text="TextView"
                android:textSize="16dp"
                tools:layout_editor_absoluteX="116dp"
                tools:layout_editor_absoluteY="88dp"
                tools:text="@tools:sample/cities" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textviewaaaa"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:alpha=".5"
        android:gravity="center"
        android:text="STUDENT SPACE"
        android:textSize="36dp"

        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:layout_editor_absoluteX="20dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="401dp"
        android:layout_height="98dp"
        android:background="@color/textColor"
        android:onClick="toAvailableTeachers"
        android:text="See teachers"
        android:textColor="@color/bgColor"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>