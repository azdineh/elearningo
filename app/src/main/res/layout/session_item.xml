<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/border"
    android:padding="8dp"
    android:clickable="true"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sessionName_textview"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:drawableLeft="@drawable/ic_file"
            android:fontFamily="sans-serif-black"
            android:text="Session 1"
            android:textSize="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview40"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Module : "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/moduleName_textview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Machine and Deep Learning "
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textview_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No description"
            android:textSize="18dp"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/textviewnafiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:text="No files included"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/text_view_absent_students"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@color/lightpink"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="8dp"
            android:text="0 absent students marked"
            android:elevation="12dp"
            android:textSize="18dp"
            android:alpha="0.9"
            />

        <TextView
            android:id="@+id/date_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="17/03/2020 "
            android:textAlignment="textEnd"
            android:textSize="16dp" />


    </LinearLayout>

</LinearLayout>